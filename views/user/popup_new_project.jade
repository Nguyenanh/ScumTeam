#new-project.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
  .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;      
          h3#myModalLabel.modal-title 
          i.glyphicon.glyphicon-th
          | Start New Kanban  
        .modal-body.new-content-project
          .container-fluid
            .row
              .col-md-12
                .form-group#title
                  label.control-label Title
                  input.form-control(type="text" name="title" placeholder="Title")
              .col-md-12
                .form-group#datetime
                  label.control-label Date of a sprint
                  input#dp1.form-control.input-sm(type="text" placeholder="Choose Date" name="date" readonly="readonly")
                  input(type="hidden" name="master" value="#{user.firstname}")
                  input(type="hidden" name="master_id" value="#{user._id}")
              .col-md-12
                .form-group#pdo-project
                  label.control-label PDO
                  textarea.form-control#pdo-textarea(name="content_pdo" rows=5 placeholder="Infomation Project")
              .col-md-12
                .form-group#spring
                  label.control-label Sprint
                  input.form-control(name="spring" type="number" placeholder="Enter number sprint")
        .modal-footer 
          button.btn.btn-primary#save-new-project(type='button') Save