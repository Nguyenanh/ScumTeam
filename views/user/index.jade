extends ../menu
block content
  .container
    .row
      .col-md-12.header-project
        .page-header
          span.glyphicon.glyphicon-user.red
            h3 My Kanban
          button.btn.btn-primary(type="button" data-toggle="modal" data-target="#new-project")
            i.glyphicon.glyphicon-plus
            | New
          include popup_new_project
    .row.list-project
      -for(var i =0; i<projects.length; i++)
        .col-md-3(data-project="#{projects[i]._id}")
          if projects[i].master_id == user._id
            a.back-ground-red(href="/project/#{projects[i]._id}"  data-toggle="tooltip" title="#{projects[i].master}")
              span=projects[i].title
              label.status-project.img-circle=projects[i].status
          else
            a.back-ground-blue(href="/project/#{projects[i]._id}" data-toggle="tooltip" title="#{projects[i].master}")
              span=projects[i].title
              label.status-project.img-circle=projects[i].status
block script
  script(src='/javascripts/editor.js')
  script(src='/javascripts/controller/project_controller.js')
  script(src='/javascripts/controller/socket_controller.js')
  script(src='/javascripts/controller/alert_controller.js')
  script(src='/javascripts/controller/tooltip_controller.js') 
  script(src='/javascripts/view/project_view.js')
  script(src='/js/socket.io-1.3.4.js')
